[build-system]
requires = ["sip >=6, <7"]
build-backend = "sipbuild.api"

[project]
name = "lima-limacore"
requires-python = ">= 3.11"
#dynamic = ["version"]
authors = [{ name = "BCU (ESRF)" }]
description = "Python binding for Lima"
readme = "README.md"
license = "MIT"
license-files = ["LICENSE"]
classifiers = [
    "Intended Audience :: Science/Research",
    "Programming Language :: Python :: 3",
]

[tool.sip.bindings.limacore]
exceptions = true

[tool.sip.project]
sip-files-dir = "build/sip"
build-dir = "build-sip"
sip-include-dirs=["common/sip", "hardware/sip", "control/sip", "control/software_operation/sip","@SIP_INSTALL_DIR@/sip/processlib"]
sip-module="lima.sip"
dunder-init= true

[project.urls]
Repository = "https://gitlab.esrf.fr/limagroup/lima"
Documentation = "https://lima1.rtfd.io/"
